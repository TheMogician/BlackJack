<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cisc181.blackjack.displayInstructions">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="271dp"
        android:padding="8dp"
        android:text="    This is a simplified version of the popular card game, Black Jack. All you need to do is press the 'Hit' button and the dealer will deal you 3 cards. If they are over 21 you lose; if they are under or equal to 21 you win."
        android:textSize="25sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Back to Main Menu"
        android:onClick="mainMenu"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="94dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Play Game"
        android:onClick="cardGame"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="46dp" />
</LinearLayout>